
// media

xs()
 @media (min-width 400px)
    {block}
sm()
 @media (min-width 768px)
   {block}
md()
 @media (min-width 992px)
   {block}
lg()
 @media (min-width 1220px)
   {block}
xl()
 @media (min-width 1600px)
    {block}
size500()
 @media (min-width 500px)
   {block}


//mixins

padding-block()
  padding-top 30px
  padding-bottom 30px
  +sm()
    padding-top 50px
    padding-bottom 50px
shadow()
  box-shadow 0 1px 8px rgba(0,0,0,0.4)
shadow-light()
  box-shadow 5px 4px 7px 0px rgba(0,0,0,0.2)
  transition 0.3s
shadow-white()
  transition 0.3s
  box-shadow 0px 1px 13px 5px rgba(249, 241, 241, 0.2)
center()
  left 50%
  top 50%
  transform translateX(-50%) translateY(-50%)
placeholder()
  input::-webkit-input-placeholder
    color $light-grey
    font-weight normal
  input::-moz-placeholder
    font-weight normal
    color $light-grey
  input:-moz-placeholder
    font-weight normal
    color $light-grey
  input:-ms-input-placeholder
    font-weight normal
    color $light-grey

//variabels

$tomato = #F85A53
$light-blue = #41557c
$blue = #0d1b38
$light = #F1F3F6
$light-grey = #C5CAD4
$grey = #7E8DA6

$height-header = 60px


//--------------------------------------------//


*
  color $blue
  font-weight bold
  letter-spacing 1.3px
  margin 0
  padding 0
  box-sizing border-box
  font-family sans-serif
html
  font-size 14px
  +sm()
    font-size 16px
body
  min-height 100vh
  height 100%
  background-color #eef0f2
  +md()
    overflow-y scroll
button
  outline none
  border none
  cursor pointer
a
  cursor pointer
  text-decoration none
input
  border none
  outline none
ul
  margin 0
  padding 0
  list-style-type none
.container
  width 100%
  margin 0 auto
  padding 0 10px
  +sm()
    width 740px
    padding 0 15px
  +md()
    width 940px
  +lg()
    width 1200px
.fixed:after
  z-index 2
  content ''
  position absolute
  top $height-header
  right 0
  bottom 0
  left 0
  background-color rgba(0, 0, 0, 0.7)
.fixed
  position relative
  width 100%
  position fixed